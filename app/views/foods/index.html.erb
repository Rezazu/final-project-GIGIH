<h1> Items </h1>
<table>
  <thead>
    <tr>
      <td><b>Name</b></td>
      <td><b>Category</b></td>
      <td><b>Description</b></td>
      <td><b>Price</b></td>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.category %></td>
        <td><%= food.description %></td>
        <td><%= food.price %></td>
        <td class="button">
          <a class="margin" href="/foods/<%=food.id%>">Show</a>
          <a class="margin" href="/<%=food.id%>/edit">Edit</a>
          <%= button_to "Delete", foods_delete_path(food.id), :method => 'delete' %>
        </td>
        
      </tr>
    <% end %>
  </tbody>
</table>
<a href="/foods/new">New Item</a>

<style>
  .button{
    display:flex;
  }

  .margin{
    margin-right:5px;
  }
</style>